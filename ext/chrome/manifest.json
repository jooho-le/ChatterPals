{
  "manifest_version": 3,
  "name": "ChatterPals",
  "description": "AI-powered language learning assistant",
  "version": "0.3.1",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "images/icon-logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "http://127.0.0.1:8008/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "images/icon-logo.png", "popup.html" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}

