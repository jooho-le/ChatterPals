{
  "manifest_version": 3,
  "name": "ChatterPals",
  "description": "AI-powered language learning assistant",
  "version": "1.1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "images/icon-logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "offscreen",
    "contextMenus"
  ],
  "host_permissions": [
    "http://127.0.0.1:8008/*",
    "http://127.0.0.1:8000/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/icon-logo.png",
        "popup.html",
        "popup.css",
        "offscreen.html",
        "offscreen.js",
        "permission.html",
        "permission.js"
      ],
      "matches": [ "<all_urls>" ]
    }
  ]
}

